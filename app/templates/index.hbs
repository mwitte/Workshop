    <label for="name">Name</label>
    {{view Ember.TextField
      valueBinding="name"
      class="form-control"
      id="name"
      placeholder="Name"}}
  </div>
  <button type="submit" class="btn btn-default" {{action create}}>Submit</button>
</form>

